%div{ class: filter.group_label ? 'form-group grouped-dates' : '' }
  - if filter.group_label
    %label= filter.group_label
  .row
    .col-lg-6
      - input_data = { default: search.search_params[filter.start_input] || filter.default_start_value.to_s }

      = f.input filter.start_input,
                as: :date,
                html5: true,
                label: filter.start_input_label,
                required: false,
                label_html: { class: filter.start_label_class },
                input_html: { value: search.search_params[filter.start_input] || filter.default_start_value.to_s,
                              data: input_data }
    .col-lg-6
      - input_data = { default: search.search_params[filter.end_input] || filter.default_end_value.to_s }

      = f.input filter.end_input,
                as: :date,
                html5: true,
                label: filter.end_input_label,
                required: false,
                label_html: { class: filter.end_label_class },
                input_html: { value: search.search_params[filter.end_input] || filter.default_end_value.to_s,
                              data: input_data }
