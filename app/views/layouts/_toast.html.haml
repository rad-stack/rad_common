.position-fixed.bottom-0.right-0.p-3.bottom-toast#toast-nav{ data: rad_toast_data(flash) }
  .toast.shadow.hide{ 'aria-atomic': 'true', 'aria-live' => 'assertive', role: 'alert' }
    .toast-header.px-3
      %h5.me-auto.pt-2#toast-nav-title
      %button.ms-2.mb-1.btn-close{ 'aria-label': 'Close', 'data-bs-dismiss': 'toast', type: 'button' }
    .toast-body
      .lead.p-2#toast-nav-message
        - if flash[:notice].present?
          = flash[:notice]
