- if record.new_record?
  .row
    .col-lg-12
      .card.duplicate-card#duplicate-card
        .card-header
          %strong Duplicate Found
        .card-body
          %strong Details :
          .duplicate-data
        .card-header
          .create_anyway
            %label.text-danger Create anyway?
            %input#create-anyway{ type: 'checkbox' }

  = render 'layouts/duplicate_toast', model: record.class
