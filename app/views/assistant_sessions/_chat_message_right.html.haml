%li.chat-right.justify-content-end.mb-3.d-flex.w-100
  .chat-text.shadow
    %pre= assistant_session_text_sanitize(message)
    - if defined?(audio_key) && audio_key.present? && defined?(assistant_session)
      - audio_src = audio_url_for_message(assistant_session, audio_key)
      - if audio_src.present?
        %audio.chat-response-audio{ controls: true, src: audio_src }
  .chat-avatar.me-3
    %i.fa.fa-user-tie.shadow
    .chat-name.m-2
      = user_name
      %br
      %strong= chat_date
