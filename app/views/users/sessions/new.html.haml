= render 'users/devise_layout' do
  = render 'layouts/card_header',
           action_name: 'custom',
           title: 'Sign In',
           icon: 'fa-sign-in-alt',
           card_style: 'bg-white'
  .card-body
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, required: true, autofocus: true, input_html: email_input_defaults(params)
        = f.input :password, required: true, input_html: password_input_defaults(params)
        = f.input :remember_me, as: :boolean, input_html: remember_me_input_defaults if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, 'Sign In', class: 'btn btn-primary'
    = render 'users/shared/links'
