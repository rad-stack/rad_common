.card
  = render 'layouts/card_header', action_name: 'custom', title: 'Sign In', icon: 'fa-right-to-bracket'
  .card-body
    = simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .form-inputs
        = f.input :email, required: false, autofocus: true, input_html: email_input_defaults(params)
        = f.input :password, required: false, input_html: password_input_defaults(params)
        = f.input :remember_me, as: :boolean, input_html: remember_me_input_defaults if devise_mapping.rememberable?
      .form-actions
        = f.button :submit, 'Sign In', class: 'btn btn-primary'
    = render 'users/shared/links'
