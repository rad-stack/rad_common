- if request.delete?
  = turbo_stream.remove @filter_id
- else
  = turbo_stream.append 'filter-cards-container' do
    = render 'filter_card',
             filter: @filter,
             filter_id: @filter_id,
             all_columns: @all_columns,
             report_model: @report_model,
             report_id: @report_id,
             joins: @joins
