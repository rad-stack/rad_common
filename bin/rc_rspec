#!/usr/bin/env ruby
require 'fileutils'

def system!(*args)
  system(*args) || abort("\n== Command #{args} failed ==")
end

directory = Dir.pwd.include?('rad_common') ? "#{Dir.pwd}/spec/dummy" : Dir.pwd
FileUtils.chdir directory do
  system!('rspec spec')
  system!('rspec `bundle show rad_common`/spec/rad_common')
end
